<body>
  <%- include('header'); -%>
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
      <br>
      <br>
      <div class="flex justify-center items-center">
        <h1 style="color: #242B2E; font-weight: 600; font-size: 30px;">Order Details</h1>
      </div>
      <div class="px-4 py-8">
        <div class="flex justify-center items-center">
          <img style="height: 340px; width: 340px;" src=<%=image %> alt="Item Image">
        </div>
        <center>
          <br>
          <p class="text-2xl mb-4">Price: â‚¹<%= price %></p>
        </center>

        <div class="px-6 py-4">
          <form action="/order" method="POST">
            <select name="userId" id="" style="visibility: hidden;">
              <option value="<%= userId %>"><%= userId %></option>
            </select>
            <select name="price" id="" style="visibility: hidden;">
              <option value="<%= price %>"></option>
            </select>
            <select name="product_id" id="" style="visibility: hidden;">
              <option value="<%= item_no %>"></option>
            </select>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Full Name</label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                name="name" type="text" placeholder="Enter your Full Name" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="email">E-Mail Address</label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                name="email" type="email" placeholder="Enter E-Mail Address" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Phone Number</label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                name="phone" type="number" placeholder="Enter Phone Number" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="Address">Address Details</label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                name="address" type="text" placeholder="Enter your Full Address" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="City">City</label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                name="city" type="text" placeholder="Enter your City" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="City">PIN Code</label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                name="pin" type="number" placeholder="Enter your PIN Code" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="City">Quantity</label>
              <input
                class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                name="quantity" type="number" placeholder="Number of Products" required>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2" for="Payment">Mode of Payment</label>
              <select name="payment" id="">
                <option value="Cash">Cash on Delivery</option>
              </select>
            </div>
            <div class="flex items-center justify-end">
              <button
                class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                type="submit">
                Order
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('footer'); -%>
</html>